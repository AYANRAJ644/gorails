<%= simple_form_for @partner do |f| %>

  <%= f.input :name, label: 'Your name please', error: 'name is mandatory, please specify one' %>
  <%= f.input :link, hint: 'No special characters.' %>
  <%= f.input :site %>

  <%= f.input :events, collection: @events %>

  <%= f.input :category, collection: Partner.categories.keys %>

  <%= f.button :submit %>
<% end %>