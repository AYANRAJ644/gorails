<%= simple_nested_form_for @event ,class: "form-horizontal" do | f | %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
        <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
        </div>
          <div class="form-group">
      <%= f.text_area :description ,class:'summernote_description' ,:id => 'description'%>
          </div>
            <div class="form-group">
      <%= f.label :start_at %><br>
      <%= f.datetime_select :start_at %>
            </div>
    <div class="form-group">
      <%= f.label :end_at %><br>
      <%= f.datetime_select :end_at %>
    </div>
              <div class="form-group">
      <%= f.label :local %><br>
      <%= f.text_area :local,class:'summernote_local', :id => 'local'%>
              </div>
                <div class="form-group">
      <%= f.label :participants_limit %><br>
      <%= f.number_field :participants_limit, min: 1 %>

      <%= f.fields_for :partner do |partner| %>
        <%= partner.input :name, label: 'Nome do patrocinador', error: 'name is mandatory, please specipartnery one' %>
        
        <%= partner.input :link, hint: 'No special characters.' %>
        <%= partner.check_box :site %>

        <%#= partner.input :event, value: @event %>

        <%= partner.input :category, collection: Partner.categories %>

        <%#= partner.collection_select(:category, :category_id, Partner.all, :id, :, prompt: true) %>

      <% end %>
                </div>
      <%= f.submit "Cadastrar",class: "btn btn-primary"%>

<% end %>
<script>
    $(document).ready(function () {
        $('.summernote_description').summernote();
        $('.summernote_local').summernote();
    });
</script>