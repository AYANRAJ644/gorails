<% collection.each do |resource| %>
    <tr id="<%= dom_id(resource) %>">
      <td><%= resource.object %></td>
      <td><%= resource.origin %></td>
      <td><%= resource.transaction_type %></td>
      <td><%= resource.value %></td>
      <td><%= resource.user_name %></td>
      <td><%= resource.payment_date %></td>
      <td><%= resource.payment_method %></td>
      <td><%= resource.consolidated %></td>
      <td><%= resource.consolidation_date %></td>
      <td class="text-center">
        <% if current_user and current_user.admin? %>
            <div class="btn-group">
              <%= link_to financial_transaction_path(resource), data: {toggle: 'tooltip', original_title: I18n.t('misc.action.show')}, title: '', class: "btn btn-xs btn-default" do %>
                  <i class="fa fa-list"></i>
              <% end %>
              <%= link_to edit_financial_transaction_path(resource), data: {toggle: 'tooltip', original_title: I18n.t('misc.action.edit')}, title: '', class: "btn btn-xs btn-default" do %>
                  <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to financial_transaction_path(resource), data: {toggle: 'tooltip', original_title: I18n.t('misc.action.destroy')}, title: '', class: "btn btn-xs btn-default" do %>
                  <i class="fa fa-times"></i>
              <% end %>
            </div>
        <% end %>

      </td>
    </tr>
<% end %>

