<%= provide :page_title, I18n.t('financial_transactions.show.header', resource: @financial_transaction.try(:id) ) %>
<%= provide :breadcrumb do %>
  <li><%= link_to  I18n.t('activerecord.models.financial_transaction.other'), financial_transactions_path %></li>
  <li><%= link_to  @financial_transaction.try(:id), @financial_transaction %></li>
  <li><%= I18n.t('financial_transactions.show.header', resource: @financial_transaction.try(:id) ) %></li>
<% end %>

<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title"><%= I18n.t('financial_transactions.show.header', resource: @financial_transaction.try(:id)) %></h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        </thead>
        <tbody>
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.object' %>:</strong></td>
             <td><%= @financial_transaction.object %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.origin' %>:</strong></td>
             <td><%= @financial_transaction.origin %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.transaction_type' %>:</strong></td>
             <td><%= @financial_transaction.transaction_type %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.value' %>:</strong></td>
             <td><%= @financial_transaction.value %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.user_id' %>:</strong></td>
             <td><%= @financial_transaction.user_id %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.payment_date' %>:</strong></td>
             <td><%= @financial_transaction.payment_date %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.payment_method' %>:</strong></td>
             <td><%= @financial_transaction.payment_method %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.consolidated' %>:</strong></td>
             <td><%= @financial_transaction.consolidated %></td>
          </tr>   
                  <tr>
            <td><strong><%=t 'activerecord.attributes.financial_transaction.consolidation_date' %>:</strong></td>
             <td><%= @financial_transaction.consolidation_date %></td>
          </tr>   
                </tbody>
      </table>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-7">
        <%= link_to I18n.t('misc.action.back'), financial_transactions_path, class: 'btn btn-default' %>
        <%= link_to I18n.t('misc.action.edit'),edit_financial_transaction_path(@financial_transaction), class: 'btn btn-warning' %>
        <%= link_to I18n.t('misc.action.destroy'),financial_transaction_path(@financial_transaction), method: :destroy, data: {confirm: I18n.t('misc.actions.confirm') }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
